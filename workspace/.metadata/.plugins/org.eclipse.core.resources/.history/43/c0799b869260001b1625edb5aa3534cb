import java.util.*;

class Solution {
    public static long[] solution(int x, int n) {
        long[] answer = new long[n];
        int num = x;
        for(int i=0; i<n; i++){
        	answer[i] = num;
        	num+=x;
        }
        return answer;
    }
    
    public static void main(String[] args) {
		long[] result = solution(-4, 2);
		System.out.println(Arrays.toString(result));
	}
}